<div class="container bg-light border rounded-3 p-4 mt-5 col-9 col-sm-7 col-md-5 col-lg-4 col-xl-3">
    <form class="m-auto bg-light"  action="/admin/admin-signup" method="post">
        <h4 class="text-center">admin SignUp!</h4>
        <br>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="emailid" placeholder="Enter your email address">
        </div>
        <br>

        <div class="form-group">
            <label>User name</label>
            <input type="text" class="form-control" name="username" placeholder="username">
        </div>
        <br>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" placeholder="password">
        </div>
        <br>

        <button type="submit" class="btn btn-primary">Submit</button>
    
    </form>
</div>