<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product</th>
                <th scope="col">Category</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">1</th>

                <td>{{this.product.productname}}</td>
                <td>{{this.product.category}}</td>
                <td><img style="width: 50px;height:50px" src="/images/proimages/{{this.product._id}}.jpg" alt=""></td>
                <td>{{this.product.price}}</td>

                <td>
                    <button class="btn btn-secondary" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)"> - </button>
                    <span id="{{this.product._id}}" for="">{{this.quantity}}</span>
                    <button class="btn btn-secondary" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)"> + </button>
                </td>
                <td>
                    <a href="/remove-product/{{this.product._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Remove</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="float-end">
        <p>Total : Rs. <span id="total">{{totalValue}}</span></p>
        <a href="/place-order" class="btn btn-success">Place order</a>
    </div>

</div>



